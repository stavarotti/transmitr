<div 
  id="app-container" 
  class="app-container 
        {{if navigation.isNavigationDrawerOpen 'navigation-drawer-open'}}">

  {{navigation-drawer isOpen=navigation.isNavigationDrawerOpen id="navigation-drawer"}}
  
  {{#main-container}}
    {{site-head}}

    {{#if isLoading}}
      <div class="loading">
        <i class="fa fa-refresh fa-spin fa-3x fa-fw"></i>
      </div>
    {{/if}}

    {{liquid-outlet}}
  {{/main-container}}
</div>
