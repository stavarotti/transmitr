<form {{action "addStation" on="submit"}}>
  <div class="form-group {{if invalidStationName 'has-danger'}}">
    <label class="form-control-label" for="stationName">Station Name</label>
    {{input
      class=stationNameClassNames
      id="stationName"
      type="text"
      value=stationName
    }}
  </div>
  <div class="form-group {{if invalidPlaylistUrl 'has-danger'}}">
    <label class="form-control-label" for="playlistUrl">Playlist URL</label>
    {{input
      class=playlistUrlClassNames
      id="playlistUrl"
      type="text"
      value=playlistUrl
    }}
  </div>
  <button type="submit" class="btn btn-primary btn-block">
    {{#if isSavingStation}}
      <i class="fa fa-refresh fa-spin fa-fw" aria-hidden="true"></i>
    {{else}}
      <i class="fa fa-plus" aria-hidden="true"></i>
    {{/if}}
    Add Station
  </button>
  {{#if showSaveStationErrorMessage}}
    <small>
      Unable to save the station. Please check the playlist URL and try again.
    </small>
  {{/if}}
  {{#if showSaveStationSuccessMessage}}
    <small>
      Station successfully added.
    </small>
  {{/if}}
</form>
